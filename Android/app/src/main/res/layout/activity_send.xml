<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/grey_light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/select_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Phone"
            android:textSize="30dp"
            android:fontFamily="@font/kollektif_bold"
            android:textColor="@color/blue_light"
            android:layout_marginRight="10dp"
            android:maxLength="10"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/select_group"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Group"
            android:textSize="30dp"
            android:fontFamily="@font/kollektif_bold"
            android:textColor="@color/grey_dark"
            android:layout_marginRight="10dp"
            android:maxLength="10"
            android:clickable="true"
            android:focusable="true" />
        </LinearLayout>

        <EditText
            android:id="@+id/send_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "30dp"
            android:fontFamily="@font/kollektif"
            android:textColor="@color/black"
        />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Amount"
            android:textSize="30sp"
            android:fontFamily="@font/kollektif_bold"
            android:textColor="@color/blue_light"
            android:layout_marginTop="30dp"
            android:maxLength="10"
            />

        <EditText
            android:id="@+id/send_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "30dp"
            android:fontFamily="@font/kollektif"
            android:textColor="@color/black"
            />


        <Button
            android:id="@+id/send_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="Send"
        />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu" />


</LinearLayout>